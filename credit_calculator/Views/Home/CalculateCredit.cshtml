@model credit_calculator.Models.Credit

@{
    ViewBag.Title = "CalculateCredit";
}

@using (Html.BeginForm("Result", "Home", FormMethod.Post))
{

    @Html.AntiForgeryToken()

    <form id="creditData" class="block-alignment">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CreditSum)
            @Html.EditorFor(model => model.CreditSum, new { htmlAttributes = new { @class = "form-control focus", @autofocus = "autofocus", @placeholder = "Enter credit amount" } })
            @Html.ValidationMessageFor(model => model.CreditSum, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CreditPeriod)
            @Html.EditorFor(model => model.CreditPeriod, new { htmlAttributes = new { @class = "form-control", @placeholder="Enter credit term"} })
            @Html.ValidationMessageFor(model => model.CreditPeriod, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CreditRateYear)
            @Html.EditorFor(model => model.CreditRateYear, new { htmlAttributes = new { @class = "form-control", @placeholder="Enter interest rate" } })
            @Html.ValidationMessageFor(model => model.CreditRateYear, "", new { @class = "text-danger" })
        </div>
        <p><input type="submit" class="btn btn-default btn-warning btn-lg col-lg-12" value="Calculate" style="margin-top: 6px"></p>
    </form>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
