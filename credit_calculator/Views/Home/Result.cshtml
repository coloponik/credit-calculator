@model credit_calculator.Models.Payment[]

@{
    ViewBag.Title = "Result Page";
}

@using (Html.BeginForm("Result", "Home"))
{
     <div class="container block-alignment">
         <div class="row">
             <div class="col block-alignment">
                  @Html.Label("ГРАФИК ПЛАТЕЖЕЙ", new { htmlAttributes = new { @class = "block-alignment" } })
             </div>
             <hr />
             <div class="table-responsive">
                 @if (Model.Length > 0)
                 {
                     <table class="table w-60">
                         <thead class="thead-light">
                             <tr>
                                 <th scope="col">№ платежа</th>
                                 <th scope="col">Дата платежа</th>
                                 <th scope="col">Размер платежа по телу, руб.</th>
                                 <th scope="col">Размер платежа по %, руб.</th>
                                 <th scope="col">Остаток основного долга, руб.</th>
                             </tr>
                         </thead>
                         <tbody>
                             @foreach (credit_calculator.Models.Payment pay in Model)
                             {
                                 <tr>
                                     <th scope="row">@pay.Id</th>
                                     <td>@pay.Date</td>
                                     <td>@pay.Body</td>
                                     <td>@pay.Percent</td>
                                     <td>@pay.MainBalance</td>
                                 </tr>
                             }
                         </tbody>
                     </table>
                 }
             </div>
             <hr/>
             <table class="table w-60">
                 <thead class="thead-light">
                     <tr>
                         <th scope="col">Итого переплата по кредиту, руб.:</th>
                         <th scope="col">@ViewData["totalOverpay"]</th>
                     </tr>
                 </thead>
             </table>
             <div class="col">
                 <p><input id="Back" type="submit" class="btn btn-default btn-warning btn-lg col-lg-10" value="Назад"></p>
             </div>
         </div>
     </div>
}